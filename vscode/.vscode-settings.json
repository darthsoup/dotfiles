{
    // Workbench

    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "vscode-icons",
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": false,

    // Editor
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.autoIndent": "brackets",
    "editor.minimap.enabled": false,
    "editor.fontFamily": "Inconsolata, Consolas, 'Courier New', monospace",
    "editor.cursorBlinking": "blink",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.renderWhitespace": "all",

    // Explorer
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,

    // Files
    "files.autoSave": "onWindowChange",
    "files.associations": {
        ".babelrc": "jsonc",
        ".eslintrc": "jsonc",
        "*.blade.php": "blade",
        "*.php": "php",
        "*.php-cs": "php"
    },
    "files.eol": "\n",
    "files.exclude": {
        "**/node_modules": true,
        "**/.cache": true,
        "**/.idea": true
    },
    "files.insertFinalNewline": true,

    // Search
    "search.exclude": {
        "**/*.map": true,
        "**/node_modules": true
    },
    "search.showLineNumbers": true,

    // Telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    // Terminal
    "terminal.explorerKind": "integrated",
    "terminal.external.windowsExec": "C:\\Windows\\System32\\cmd.exe",
    "terminal.external.osxExec": "Terminal.app",
    "terminal.external.linuxExec": "xterm",

    // Git / GitLens
    "git.autofetch": true,
    "git.showInlineOpenFileAction": false,
    "git.autorefresh": true,
    "git.decorations.enabled": true,
    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.codeLens.enabled": false,

    // Extensions, Misc
    "extensions.autoUpdate": false,

    // -- Vetur - Vue
    "vetur.completion.autoImport": false,
    "projectManager.git.baseFolders": [
        "F:\\Dateien\\Development"
    ],
    "eslint.alwaysShowStatus": true,
    "eslint.packageManager": "yarn",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "vue"
    ],
    "i18n-ally.displayLanguage": "de",
    "i18n-ally.sourceLanguage": "en",
    "i18n-ally.enabledFrameworks": [
        "vue"
    ],
    "php.validate.enable": false,
    "php.validate.executablePath": "F:\\Dateien\\Development\\php\\8.0.0",
    "intelephense.completion.triggerParameterHints": true,
    "intelephense.completion.insertUseDeclaration": true,
    "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": true,
    "intelephense.format.enable": true,
    "intelephense.telemetry.enabled": false,
    "intelephense.trace.server": "messages",
    "intelephense.environment.phpVersion": "7.3.0",
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.DS_Store/**",
        "**/node_modules/**",
        "**/vendor/**/{Test,test,Tests,tests}/**/*Test.php",
        "**/storage/framework/views/**"
    ],
    "php-docblocker.returnGap": true,
    "php-docblocker.qualifyClassNames": true,
    "php-docblocker.author": {
        "name": "Kevin Krummnacker",
        "email": "kevin.krummnacker@gmail.com"
    },
}
